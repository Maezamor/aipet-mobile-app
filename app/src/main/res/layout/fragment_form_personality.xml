<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.personality.form.FormPersonalityFragment">

    <TextView
        android:id="@+id/textView_finally"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Finally,"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_Tellme"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/dmsans_bold"
        android:text="Tell me about the dog you dream of."
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_finally" />
    <TextView
        android:id="@+id/textView_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:text="Write it here :"
        android:textSize="13sp"
        android:fontFamily="@font/dmsans_bold"
        app:layout_constraintTop_toBottomOf="@id/textView_Tellme"/>

    <EditText
        android:id="@+id/edit_rescue"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="30dp"
        android:textSize="12sp"
        android:gravity="top"
        android:fontFamily="@font/dmsans_regular"
        android:background="@drawable/bg_edittext"
        app:layout_constraintTop_toBottomOf="@+id/textView_write" />


    <com.capstone.aipet.customview.button.ButtonOnBoarding
        android:id="@+id/btn_onboarding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="50dp"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_rescue" />
