<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_item_dog"
    android:layout_width="160dp"
    android:layout_height="194dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    android:clickable="true"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="6dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/rv_image"
            android:layout_width="160dp"
            android:layout_height="101dp"
            android:src="@drawable/item_dog"
            android:background="@drawable/image_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/rv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_bold"
            android:text="Onisuka"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_image" />

        <TextView
            android:id="@+id/breedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="Breed:"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/secondary_black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_name" />

        <TextView
            android:id="@+id/rv_breed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:text="Beagle"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@id/breedText"
            app:layout_constraintStart_toEndOf="@id/breedText"
            app:layout_constraintTop_toTopOf="@+id/breedText" />

        <TextView
            android:id="@+id/rv_gender"
            android:layout_width="50dp"
            android:layout_height="17dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/gender_background"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:text="Male"
            android:textColor="@color/primary_green"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@+id/breedText"
            app:layout_constraintTop_toBottomOf="@+id/rv_breed" />

        <TextView
            android:id="@+id/rv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/dmsans_regular"
            android:gravity="center"
            android:text="1 Year"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/rv_gender"
            app:layout_constraintTop_toBottomOf="@+id/rv_breed" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="18dp"
            android:layout_marginStart="32dp"
            android:src="@drawable/ic_love"
            app:layout_constraintBottom_toBottomOf="@+id/rv_age"
            app:layout_constraintStart_toEndOf="@+id/rv_age"
            app:layout_constraintTop_toTopOf="@+id/rv_age"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>