<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    tools:context=".ui.home.detaildog.DetailDogFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDetailDog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

        <ImageView
            android:id="@+id/dt_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_dog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/dt_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:contentDescription="button kembali"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_left_arrow2_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_love"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/nameDogView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hachiko"
            android:textSize="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="10dp"
            android:fontFamily="@font/dmsans_bold"
            app:layout_constraintTop_toBottomOf="@+id/dt_image"/>
        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/nameDogView"
            app:layout_constraintStart_toStartOf="@+id/nameDogView"
            app:layout_constraintEnd_toEndOf="@+id/nameDogView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_age"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="27dp"
                    android:background="@color/broken_white">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/ageView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Age"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/secondary2_black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/ageText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="1 Year"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/primary_green"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/ageView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_breed"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/broken_white">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/breedView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Breed"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/secondary2_black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/breedText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:layout_marginTop="20dp"
                            android:text="Bulldog"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/primary_green"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/breedText" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_sex"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/broken_white">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/sexView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Sex"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/secondary2_black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/sexText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Male"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/primary_green"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sexView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_sterilization"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/broken_white">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/sterilizationView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="@string/sterilization"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/secondary2_black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/sterilizationText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="@string/text_sterilization"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/primary_green"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/sterilizationView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_selter"
                    android:layout_width="130dp"
                    android:layout_height="48dp"
                    app:cardCornerRadius="20dp"
                    android:layout_marginStart="30dp"
                    android:background="@color/broken_white">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/selterView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Shelter"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/secondary2_black"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/selterText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans_medium"
                            android:text="Shelter"
                            android:textAlignment="center"
                            android:textSize="12sp"
                            android:textColor="@color/primary_green"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/selterView" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="55dp"/>
            </LinearLayout>
        </HorizontalScrollView>


        <LinearLayout
            android:id="@+id/description_box"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/description_background"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:layout_marginHorizontal="35dp"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="@+id/horizontalScrollView">
            <TextView
                android:id="@+id/text_rescuestory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_desciption"
                android:textColor="@color/primary_green"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/button_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/description_box"
            app:layout_constraintEnd_toEndOf="@+id/description_box"
            app:layout_constraintStart_toStartOf="@id/description_box">

            <ImageButton
                android:id="@+id/btn_maps"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="64dp"
                android:background="@drawable/bg_button_map"
                android:contentDescription="button maps"
                android:elevation="2dp"
                android:src="@drawable/ic_map_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_addopt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Addopt"
                android:clickable="true"
                android:elevation="2dp"
                android:layout_marginEnd="50dp"
                android:layout_marginStart="150dp"
                android:fontFamily="@font/dmsans_bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/primary_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_maps"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>