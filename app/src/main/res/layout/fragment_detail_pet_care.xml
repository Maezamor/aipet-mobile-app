<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.healthservice.detailservice.DetailPetCareFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintDetailDog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="70dp">

    <ImageView
        android:id="@+id/dt_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_petcare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/dt_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="button kembali"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_left_arrow2_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/namepetcareView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Denpasar"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="10dp"
        android:fontFamily="@font/dmsans_bold"
        app:layout_constraintTop_toBottomOf="@+id/dt_image"/>

        <LinearLayout
            android:id="@+id/whatsapp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_sosmed"
            android:gravity="center"
            android:elevation="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="@+id/namepetcareView"
            app:layout_constraintTop_toBottomOf="@+id/namepetcareView">
            <ImageButton
                android:clickable="true"
                android:id="@+id/img_wa"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_wa" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="WhatsApp"
                android:textSize="10sp"
                android:fontFamily="@font/dmsans_medium"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/facebook"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_sosmed"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:elevation="2dp"
            app:layout_constraintStart_toEndOf="@+id/whatsapp"
            app:layout_constraintTop_toBottomOf="@+id/namepetcareView">
            <ImageButton
                android:clickable="true"
                android:id="@+id/img_fb"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_fb" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="WhatsApp"
                android:textSize="10sp"
                android:fontFamily="@font/dmsans_medium"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/instagram"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bg_sosmed"
            android:gravity="center"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:elevation="2dp"
            app:layout_constraintStart_toEndOf="@+id/facebook"
            app:layout_constraintTop_toBottomOf="@+id/namepetcareView">
            <ImageButton
                android:clickable="true"
                android:id="@+id/img_instagram"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_insta" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="WhatsApp"
                android:textSize="10sp"
                android:fontFamily="@font/dmsans_medium"/>
        </LinearLayout>
        <TextView
            android:id="@+id/descriptionView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/dmsans_medium"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/whatsapp"/>
        <LinearLayout
            android:id="@+id/description_box"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/description_background"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:padding="20dp"
            android:layout_marginHorizontal="35dp"
            app:layout_constraintTop_toBottomOf="@+id/descriptionView"
            app:layout_constraintEnd_toEndOf="@+id/descriptionView"
            app:layout_constraintStart_toStartOf="@+id/descriptionView">
            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_desciption"
                android:textColor="@color/primary_green"
                android:fontFamily="@font/dmsans_regular"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>