<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/default_white"
    tools:context=".ui.Guide.detailguide.DetailGuideFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/dt_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:contentDescription="button kembali"
            android:src="@drawable/ic_left_arrow2_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Procedures for bathing pet"
            android:fontFamily="@font/dmsans_bold"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/dt_back"
            app:layout_constraintStart_toStartOf="@+id/dt_back"/>
        <TextView
            android:id="@+id/subtitle_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dmsans_regular"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor."
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@+id/title_guide"/>
        <ImageView
            android:id="@+id/img_guide"
            android:layout_width="330dp"
            android:layout_height="200dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/img"
            android:background="@drawable/bg_thankyou_box"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_guide"
            app:layout_constraintStart_toStartOf="@+id/subtitle_guide"
            app:layout_constraintEnd_toEndOf="@id/subtitle_guide"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/bg_thankyou_box"
            app:layout_constraintTop_toBottomOf="@id/img_guide"
            >
            <TextView
                android:id="@+id/desc_guide"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="13sp"
                android:text="@string/text_desciption"
                android:fontFamily="@font/dmsans_regular"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>